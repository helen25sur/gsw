<!DOCTYPE html>
<html lang="ru">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }}</title>

  {% for style in linkStyle %}
    <link rel="stylesheet" href="{{ style }}">    
  {% endfor %}
  
  <link rel="shortcut icon" href="{{ linkFavicon }}" type="image/x-icon">

 {% for itemSrcipt in mainScripts %}
  <script src="{{ itemSrcipt }}" defer></script>
{% endfor %}

{% for itemSrcipt in addedScripts %}
  <script src="{{ itemSrcipt }}" defer></script>
{% endfor %}
</head>

<body class="body">
  <div class="overlay">


    <!-- Меню и логотип -->
    <div class="container">
      <header class="main-header">
        <nav class="main-menu">

          <ul class="menu-list">

          {% for itemMenu in firstListMenu %}
            
            <li class="menu-item"><a href="{{ itemMenu.href }}" class="menu-link">{{ itemMenu.page }}</a></li>
            
          {% endfor %}
          </ul>

          <div class="block-logo">
            <a href="{{ homeHref }}" class="menu-link main-logo-link">
              <img class="logotype" src="{{ srcLogo }}" width="150" alt="LLC GEORGIA SEA WAYS">
            </a>
          </div>

          <ul class="menu-list">

           {% for itemMenu in secondListMenu %}

           <li class="menu-item"><a href="{{ itemMenu.href }}" class="menu-link">{{ itemMenu.page }}</a></li>
             
             {% endfor %}
          </ul>
          <button id="burger-menu" class="burger-menu hidden"></button>
        </nav>

      </header>
